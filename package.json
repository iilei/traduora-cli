{
  "name": "traduora-cli",
  "version": "0.12.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "tdd": "test --watch",
    "test": "jest",
    "start": "node --require @babel/register ./src/index.js ",
    "eslint": "eslint src __mocks__ .babelrc.js",
    "prebuild": "npm run eslint && npm test",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore \"src/**/*.spec.js\"",
    "prepack": "node_modules/.bin/del lib ; npm run build",
    "postbuild": "chmod +x lib/index.js",
    "bin": "node --require dotenv/config ./lib/index.js",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "bin": {
    "traduora": "lib/index.js"
  },
  "author": "Jochen Preusche <iilei@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "cosmiconfig": "^5.2.1",
    "globby": "^10.0.1",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.15",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-shebang": "^1.0.0",
    "del-cli": "^2.0.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.2.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-mock-axios": "^3.1.0",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.js",
      "!coverage/**/*",
      "!lib/**/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jestsetup.js"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "clearMocks": true
  },
  "engines": {
    "node": ">= 9.0.0",
    "npm": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iilei/traduora-cli"
  },
  "lint-staged": {
    "*.js": [
      "npm run eslint -- --fix",
      "git add"
    ],
    "*.{css,sass,less}": [
      "./bin/fail.sh Please use .scss for styling!"
    ],
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test -- --coverage #"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "traduora": {
    "pull-to": "<rootDir>/intl/pull/<locale>.<hash:4>.json",
    "client-id": "test",
    "locale": "en_GB",
    "locales": [
      "de_DE",
      "en_GB"
    ]
  }
}
